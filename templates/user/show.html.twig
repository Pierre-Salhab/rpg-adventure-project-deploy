{% extends 'base.html.twig' %}

{% block title %}
	{{ user.pseudo }}
{% endblock %}

{% block body %}
	<div class="container my-4">
		<div class="row">
			<div class="col-md-8 offset-md-2">
				<div class="card">
					<div class="card-body">
						<table class="table">
							<tbody>
								<tr>
									<th>Id</th>
									<td>{{ user.id }}</td>
								</tr>
								<tr>
									<th>Email</th>
									<td>{{ user.email }}</td>
								</tr>
								<tr>
									<th>Roles</th>
									<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
								</tr>
								<tr>
									<th>Password</th>
									<td>{{ user.password }}</td>
								</tr>
								<tr>
									<th>Pseudo</th>
									<td>{{ user.pseudo }}</td>
								</tr>
								<tr>
									<th>Avatar</th>
									<td>{{ user.avatar }}</td>
								</tr>
							</tbody>
						</table>

						<a class='btn btn-warning m-1' href="{{ path('app_user_edit', {'id': user.id}) }}">Modifier</a>
						{{ include('user/_delete_form.html.twig') }}
						<a class='btn btn-primary m-1' href="{{ path('app_user_index') }}">Retour Ã  la liste</a>
					{% endblock %}
