{% extends 'base.html.twig' %}

{% block body %}
	<div class="container my-4">
		<h1 class='text-center'>
			{% block title %}Liste des Races
			{% endblock %}
		</h1>
		<a class='btn btn-primary show' href="{{ path('app_home') }}">Retour Ã  l'acceuil</a>
		<a class="mb-2 btn btn-success float-end" href="{{ path('app_race_new') }}">Ajouter une nouvelle race</a>
		<table class="table table-hover mt-4">
			<thead>
				<tr>
					<th>Id</th>
					<th>Name</th>
					<th>Description</th>
					<th class="col-md-4 mr-auto text-center">Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for race in races %}
					<tr>
						<td>{{ race.id }}</td>
						<td>{{ race.name }}</td>
						<td>{{ race.description }}</td>
						<td>
							<a class="btn btn-primary float-end  m-1" href="{{ path('app_race_show', {'id': race.id}) }}">Voir</a>
							<a class="btn btn-warning float-end  m-1" href="{{ path('app_race_edit', {'id': race.id}) }}">Modifier</a>
							{{ include('race/_delete_form.html.twig') }}
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="6">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
