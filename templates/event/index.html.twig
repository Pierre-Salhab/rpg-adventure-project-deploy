{% extends 'base.html.twig' %}

{% block body %}
	<div class="container my-4">
		<h1 class='text-center'>
			{% block title %}Liste des Events
			{% endblock %}
		</h1>
		<a class='btn btn-primary show' href="{{ path('app_home') }}">Retour à l'acceuil</a>
		<a class="mb-2 btn btn-success float-end" href="{{ path('app_event_new') }}">Ajouter un nouveau évènement</a>
		<table class="table table-hover mt-4">
			<thead>
				<tr>
					<th>Id</th>
					<th>Title</th>
					<th>Description</th>
					<th>Opening</th>
					<th>Picture</th>
					<th class="text-center">Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for event in events %}
					<tr>
						<td>{{ event.id }}</td>
						<td>{{ event.title }}</td>
						<td>{{ event.description }}</td>
						<td>{{ event.opening }}</td>
						<td>
							<img class="img-fluid" src="{{ event.picture }}" alt="{{ 'image de ' ~ event.title }}">
						</td>
						<td>
							<a class="btn btn-primary float-end  m-1" href="{{ path('app_event_show', {'id': event.id}) }}">Voir</a>
							<a class="btn btn-warning float-end  m-1" href="{{ path('app_event_edit', {'id': event.id}) }}">Modifier</a>
							{{ include('event/_delete_form.html.twig') }}
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="6">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
