{% extends 'base.html.twig' %}

{% block body %}
	<div class="container my-4">
		<h1 class='text-center'>
			{% block title %}Liste des Réponses
			{% endblock %}
		</h1>
		<a class='btn btn-primary show' href="{{ path('app_home') }}">Retour à l'acceuil</a>
		<a class="mb-2 btn btn-success float-end" href="{{ path('app_answer_new') }}">Ajouter une nouvelle réponse</a>
		<table class="table table-hover mt-4">
			<thead>
				<tr>
					<th>Id</th>
					<th>Content</th>
					<th class="col-md-4 mr-auto text-center">Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for answer in answers %}
					<tr>
						<td>{{ answer.id }}</td>
						<td>{{ answer.content }}</td>
						<td>
							<a class="btn btn-primary float-end  m-1" href="{{ path('app_answer_show', {'id': answer.id}) }}">Voir</a>
							<a class="btn btn-warning float-end  m-1" href="{{ path('app_answer_edit', {'id': answer.id}) }}">Modifier</a>
							{{ include('answer/_delete_form.html.twig') }}
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="7">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>

{% endblock %}
