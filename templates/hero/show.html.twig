{% extends 'base.html.twig' %}

{% block body %}
	<div class="container my-4">
		<h1 class="text-center">
			{% block title %}
				{{ hero.name }}
			{% endblock %}
		</h1>
		<div class="row">
			<div class="col-md-8 offset-md-2">
				<div class="card">
					<div class="card-body">
						<table class="table">
							<tbody>
								<tr>
									<th>Id</th>
									<td>{{ hero.id }}</td>
								</tr>
								<tr>
									<th>Name</th>
									<td>{{ hero.name }}</td>
								</tr>
								<tr>
									<th>MaxHealth</th>
									<td>{{ hero.maxHealth }}</td>
								</tr>
								<tr>
									<th>Health</th>
									<td>{{ hero.health }}</td>
								</tr>
								<tr>
									<th>Strength</th>
									<td>{{ hero.strength }}</td>
								</tr>
								<tr>
									<th>Intelligence</th>
									<td>{{ hero.intelligence }}</td>
								</tr>
								<tr>
									<th>Dexterity</th>
									<td>{{ hero.dexterity }}</td>
								</tr>
								<tr>
									<th>Defense</th>
									<td>{{ hero.defense }}</td>
								</tr>
								<tr>
									<th>Karma</th>
									<td>{{ hero.karma }}</td>
								</tr>
								<tr>
									<th>Xp</th>
									<td>{{ hero.xp }}</td>
								</tr>
								<tr>
									<th>Picture</th>
									<td><img class="img-fluid" src="{{ hero.picture }}" alt="{{ 'image de ' ~ hero.name }}">{{ hero.picture }}</td>
								</tr>
								<tr>
									<th>Progress</th>
									<td>{{ hero.progress }}</td>
								</tr>
								<tr>
									<th>Inventaire</th>
									<td>
										{# TODO hero_item a mettre en place  #}
									</td>
								</tr>
							</tbody>
						</table>
						<a class='btn btn-warning  m-1' href="{{ path('app_hero_edit', {'id': hero.id}) }}">Modifier</a>
						{{ include('hero/_delete_form.html.twig') }}
						<a class='btn btn-primary  m-1' href="{{ path('app_hero_index') }}">Retour Ã  la liste</a>

					</div>
				</div>

			</div>
		</div>

	</div>
{% endblock %}
