{% extends 'base.html.twig' %}

{% block body %}
	<div class="container my-4">
		<h1 class='text-center'>
			{% block title %}Liste des Reviews
			{% endblock %}
		</h1>
		<a class='btn btn-primary show' href="{{ path('app_home') }}">Retour Ã  l'acceuil</a>
		<a class="mb-2 btn btn-success float-end" href="{{ path('app_review_new') }}">Ajouter un nouvel avis</a>

		<table class="table table-hover mt-4">
			<thead>
				<tr>
					<th>Id</th>
					<th>Title</th>
					<th>Content</th>
					<th>Rating</th>
					<th>CreatedAt</th>
					<th>UpdatedAt</th>
					<th class="text-center">Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for review in reviews %}
					<tr>
						<td>{{ review.id }}</td>
						<td>{{ review.title }}</td>
						<td>{{ review.content }}</td>
						<td>{{ review.rating }}</td>
						<td>{{ review.createdAt ? review.createdAt|date('Y-m-d H:i:s') : '' }}</td>
						<td>{{ review.updatedAt ? review.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
						<td>
							<a class="btn btn-primary float-end  m-1" href="{{ path('app_review_show', {'id': review.id}) }}">Voir</a>

							<a class="btn btn-warning float-end  m-1" href="{{ path('app_review_edit', {'id': review.id}) }}">Modifier</a>
							{{ include('review/_delete_form.html.twig') }}
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="7">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>

{% endblock %}
